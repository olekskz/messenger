{
  "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDir": "./",
      "baseUrl": "."
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}